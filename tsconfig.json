{
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"compilerOptions": {
		"target": "es6",
		"lib": ["es2021"],
		"jsx": "react",
		"module": "node16",
		"moduleResolution": "node16",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "types",
		"sourceMap": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"forceConsistentCasingInFileNames": true
	}
}
